		<!-- Depends on com.sun.syndication that must be added to argeo-extras 
			repo -->
		<!-- <module>org.argeo.streams</module> -->
		<module>dep</module>
	</modules>
	<url>${site.urlBase}/${developmentCycle.connect}</url>
	<scm>
		<connection>scm:git:http://git.argeo.org/apache2/argeo-connect.git</connection>
		<url>http://git.argeo.org/?p=apache2/argeo-connect.git;a=summary</url>
		<developerConnection>scm:git:https://code.argeo.org/git/apache2/argeo-connect.git</developerConnection>
		<tag>HEAD</tag>
	</scm>
