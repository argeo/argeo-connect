	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.argeo.commons</groupId>
		<artifactId>argeo-commons</artifactId>
		<version>2.1.71-SNAPSHOT</version>
	</parent>
	<groupId>org.argeo.connect</groupId>
	<artifactId>argeo-connect</artifactId>
	<packaging>pom</packaging>
	<name>Argeo Connect</name>
	<description>Real world IT</description>
	<version>2.1.79-SNAPSHOT</version>
	<properties>
		<version.argeo-connect>2.1.79-SNAPSHOT</version.argeo-connect>
		<version.argeo-tp-extras>2.1.10</version.argeo-tp-extras>
	</properties>
	<modules>
		<module>org.argeo.connect.core</module>
		<module>org.argeo.connect.ui</module>
		<module>org.argeo.theme.argeo2</module>

		<module>org.argeo.activities</module>

		<module>org.argeo.documents</module>

		<module>org.argeo.people.core</module>
		<module>org.argeo.people.ui</module>
		<module>org.argeo.people.web</module>
		<module>org.argeo.people.workbench.rap</module>

		<module>org.argeo.media</module>

		<module>org.argeo.tracker</module>

		<!-- Depends on org.eclipse.ui.form that must be added to eclipse RCP repo -->
		<!-- <module>org.argeo.photo.manager.ui</module> -->
