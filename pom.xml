<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.argeo.commons</groupId>
		<artifactId>argeo-commons</artifactId>
		<version>0.2.3-SNAPSHOT</version>
	</parent>
	<groupId>org.argeo.connect</groupId>
	<artifactId>argeo-connect</artifactId>
	<packaging>pom</packaging>
	<name>Argeo Connect</name>
	<version>0.1.0-SNAPSHOT</version>
	<properties>
		<developmentCycle.connect>0.1</developmentCycle.connect>
		<site.repoBase>file:///srv/projects/www/connect/site</site.repoBase>
		<site.urlBase>http://projects.argeo.org/connect/site</site.urlBase>
		<version.connect>${developmentCycle.connect}.1-SNAPSHOT</version.connect>
	</properties>
	<modules>
		<module>dep</module>
	</modules>
	<url>${site.urlBase}/${developmentCycle.connect}</url>
	<scm>
		<connection>scm:svn:https://svn.argeo.org/connect/trunk</connection>
		<developerConnection>scm:svn:https://svn.argeo.org/connect/trunk</developerConnection>
		<url>https://svn.argeo.org/connect/trunk</url>
	</scm>
	<licenses>
