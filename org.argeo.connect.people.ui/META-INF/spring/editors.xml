<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="listValuesEditor" class="org.argeo.connect.people.ui.editors.ListValuesEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleUiService" ref="peopleUiService" />
	</bean>

	<bean id="searchByTagEditor" class="org.argeo.connect.people.ui.editors.SearchByTagEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleUiService" ref="peopleUiService" />
	</bean>

	<bean id="searchPersonEditor" class="org.argeo.connect.people.ui.editors.SearchPersonEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleUiService" ref="peopleUiService" />
	</bean>


	<!-- User and groups -->
	<bean id="userEditor" class="org.argeo.connect.people.ui.editors.UserEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="peopleService" ref="peopleService" />
	</bean>

	<bean id="groupEditor" class="org.argeo.connect.people.ui.editors.GroupEditor"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
		<property name="repository" ref="repository" />
	</bean>

	<bean id="userGroupEditor" class="org.argeo.connect.people.ui.editors.UserGroupEditor"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
		<property name="repository" ref="repository" />
	</bean>

	<!-- DEFAULT PEOPLE EDITORS -->
	<bean id="personEditor" class="org.argeo.connect.people.ui.editors.PersonEditor"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
		<property name="repository" ref="repository" />
		<property name="peopleUiService" ref="peopleUiService" />
	</bean>

	<bean id="orgEditor" class="org.argeo.connect.people.ui.editors.OrgEditor"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
		<property name="repository" ref="repository" />
		<property name="peopleUiService" ref="peopleUiService" />
	</bean>

	<!-- DEFAULT ACTIVITIES EDITORS -->
	<bean id="activityEditor" class="org.argeo.connect.people.ui.editors.ActivityEditor"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
		<property name="repository" ref="repository" />
		<property name="peopleUiService" ref="peopleUiService" />
	</bean>

	<bean id="taskEditor" class="org.argeo.connect.people.ui.editors.TaskEditor"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
		<property name="repository" ref="repository" />
		<property name="peopleUiService" ref="peopleUiService" />
	</bean>
</beans>