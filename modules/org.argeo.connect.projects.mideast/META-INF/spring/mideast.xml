<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="locations">
			<value>osgibundle:mideast.properties</value>
		</property>
	</bean>

	<!-- JCR / GEOTOOLS INTEGRATION -->
	<bean id="geoJcrIndex" class="org.argeo.geotools.jcr.GeoJcrIndex"
		init-method="init" destroy-method="dispose">
		<property name="session" ref="jcrSession" />
		<property name="systemExecutionService" ref="systemExecutionService" />
		<property name="dataStore" ref="postGisDataStore" />
	</bean>

	<!-- JACKRABBIT -->
	<bean id="jcrRepository" class="org.argeo.jackrabbit.JackrabbitContainer">
		<property name="uri" value="${connect.projects.mideast.repo.uri}" />
		<property name="homeDirectory" value="${connect.projects.mideast.repo.home}" />
		<property name="configuration"
			value="${connect.projects.mideast.repo.configuration}" />
		<property name="variables" value="osgibundle:/mideast.properties" />
		<property name="namespaces">
			<map>
				<entry key="argeo" value="http://www.argeo.org/argeo" />
				<entry key="gis" value="http://www.argeo.org/gis" />
			</map>
		</property>
		<property name="cndFiles">
			<list>
				<value>classpath:/org/argeo/jcr/argeo.cnd</value>
				<value>classpath:/org/argeo/jcr/gis/argeo_gis.cnd</value>
			</list>
		</property>
	</bean>

	<bean id="jcrSession" class="org.argeo.jcr.ThreadBoundJcrSessionFactory">
		<property name="repository" ref="jcrRepository" />
		<property name="workspace" value="${connect.projects.mideast.repo.workspace}" />
	</bean>

	<!-- POSTGIS -->
	<bean id="postGisDataStore" factory-bean="postGisDataStoreFactory"
		factory-method="createDataStore">
		<constructor-arg>
			<map>
				<entry key="Data Source" value-ref="dataSource" />
			</map>
		</constructor-arg>
	</bean>

	<bean id="postGisDataStoreFactory" class="org.geotools.data.postgis.PostgisNGDataStoreFactory" />

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="org.postgresql.Driver" />
		<property name="url" value="${connect.projects.mideast.repo.dburl}" />
		<property name="username" value="${connect.projects.mideast.repo.dbuser}" />
		<property name="password" value="${connect.projects.mideast.repo.dbpassword}" />
		<property name="testOnBorrow" value="true" />
		<property name="validationQuery" value="SELECT 1" />
		<property name="maxActive" value="${connect.projects.mideast.repo.maxPoolSize}" />
		<property name="maxIdle" value="2" />
	</bean>

</beans>