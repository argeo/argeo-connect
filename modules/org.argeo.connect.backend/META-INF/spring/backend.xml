<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Configuration -->
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="locations">
			<value>osgibundle:backend.properties</value>
		</property>
	</bean>

	<!-- JCR / GEOTOOLS INTEGRATION -->
	<bean id="geoJcrIndex" class="org.argeo.geotools.jcr.GeoJcrIndex"
		init-method="init" destroy-method="dispose">
		<property name="session" ref="jcrSession" />
		<property name="dataStore" ref="geoDbDataStore" />
	</bean>

	<bean id="geoJcrMapper" class="org.argeo.geotools.jcr.SimpleGeoJcrMapper"
		init-method="init" destroy-method="dispose">
		<property name="systemSession">
			<bean factory-bean="jcrRepository" factory-method="login" />
		</property>
	</bean>

	<!-- JACKRABBIT -->
	<bean id="jcrRepository" class="org.argeo.jackrabbit.JackrabbitWrapper"
		init-method="init" destroy-method="destroy">
		<property name="cndFiles">
			<list>
				<value>/org/argeo/gis/argeo_gis.cnd</value>
				<value>/org/argeo/connect/connect.cnd</value>
			</list>
		</property>
		<property name="repository" ref="nodeRepository" />
		<property name="bundleContext" ref="bundleContext" />
	</bean>

	<bean id="jcrSession" class="org.argeo.security.jcr.SecureThreadBoundSession">
		<property name="repository" ref="jcrRepository" />
		<property name="workspace" value="${connect.repo.workspace}" />
	</bean>

	<!-- SHAPEFILE -->
	<bean id="shapefileDataStoreFactory" class="org.argeo.geotools.ShpDataStoreFactory">
		<property name="url" value="${osgi.instance.area}/geodb" />
	</bean>

	<bean id="geoDbDataStore" factory-bean="shapefileDataStoreFactory"
		factory-method="createDataStore">
	</bean>


	<!-- POSTGIS -->
	<bean id="postGisDataStoreFactory" class="org.argeo.geotools.jdbc.PostgisDataStoreFactory" />

	<!-- <bean id="geoDbDataStore" factory-bean="postGisDataStoreFactory" -->
	<!-- factory-method="createDataStore"> -->
	<!-- <constructor-arg ref="geoDbDataSource" /> -->
	<!-- </bean> -->

	<bean id="geoDbDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="org.postgresql.Driver" />
		<property name="url" value="${connect.geodb.dburl}" />
		<property name="username" value="${connect.geodb.dbuser}" />
		<property name="password" value="${connect.geodb.dbpassword}" />
		<property name="testOnBorrow" value="true" />
		<property name="validationQuery" value="SELECT 1" />
		<property name="maxActive" value="${connect.geodb.maxPoolSize}" />
		<property name="maxIdle" value="2" />
	</bean>

	<!-- Execute initialization with a system authentication -->
	<bean
		class="org.argeo.security.core.AuthenticatedApplicationContextInitialization">
		<property name="authenticationManager" ref="authenticationManager" />
	</bean>

</beans>