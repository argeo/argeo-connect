<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/util   
       	http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="peopleRepository" class="org.argeo.jackrabbit.JackrabbitWrapper"
		init-method="init" destroy-method="destroy">
		<property name="cndFiles">
			<list>
				<value>/org/argeo/connect/people/people.cnd</value>
			</list>
		</property>
		<property name="repository" ref="nodeRepository" />
		<property name="bundleContext" ref="bundleContext" />
	</bean>

	<!-- People specific roles declaration -->

	<!-- ROLE_BUSINESS_ADMIN: A role that has JCR_ALL rights on the workspace. 
		Sees people specific admin perspectives -->
	<!-- ROLES -->
	<bean id="ROLE_BUSINESS_ADMIN" class="org.argeo.security.core.SimpleRoleRegistration"
		init-method="run">
		<property name="role" value="org.argeo.connect.people.admin" />
		<!-- <beans:property name="roles"/><beans:list>...</beans:list></beans:property> -->
		<property name="userAdmin" ref="userAdmin" />
		<property name="userTransaction" ref="userTransaction" />
	</bean>


	<!-- <bean class="org.argeo.security.core.SimpleRoleRegistration" init-method="run"> 
		<property name="role" value="ROLE_BUSINESS_ADMIN" /> <property name="userAdminService" 
		ref="userAdminService" /> </bean> -->

	<!-- ROLE_REGISTERED_USER: A role that has a home and read a/o write access 
		on some sub parts of the workspace: this must be done by the current calling 
		application -->
	<!-- <bean class="org.argeo.security.core.SimpleRoleRegistration" init-method="run"> 
		<property name="role" value="ROLE_REGISTERED_USER" /> <property name="userAdminService" 
		ref="userAdminService" /> </bean> -->
	<!-- ROLE_REGISTERED_GUEST: A role that has been granted JCR_READ rights 
		on the workspace -->
	<!-- DEPRECATED not used for the time being -->
	<!-- <bean class="org.argeo.security.core.SimpleRoleRegistration" init-method="run"> 
		<property name="role" value="ROLE_REGISTERED_GUEST" /> <property name="userAdminService" 
		ref="userAdminService" /> </bean> -->
	<!-- Effective attribution of privileges. -->
	<bean parent="template.jcrAuthorizations">
		<property name="principalPrivileges">
			<util:map>
				<entry key="jcr:all" value="ROLE_BUSINESS_ADMIN" />
				<!-- <entry key="jcr:all" value="ROLE_REGISTERED_MEMBER" /> <entry key="jcr:read" 
					value="ROLE_REGISTERED_GUEST" /> -->
			</util:map>
		</property>
	</bean>

	<bean id="template.jcrAuthorizations" abstract="true"
		class="org.argeo.jackrabbit.JackrabbitAuthorizations" init-method="run">
		<property name="workspace" value="*" />
		<property name="repository" ref="peopleRepository" />
	</bean>
</beans>