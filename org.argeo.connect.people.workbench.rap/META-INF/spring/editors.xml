<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Default People entity editors -->
	<bean id="personEditor"
		class="org.argeo.connect.people.workbench.rap.editors.PersonEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="resourcesService" ref="resourcesService" />
		<property name="activitiesService" ref="activitiesService" />
		<property name="peopleService" ref="peopleService" />
		<property name="appWorkbenchService" ref="peopleWorkbenchService" />
	</bean>

	<bean id="orgEditor"
		class="org.argeo.connect.people.workbench.rap.editors.OrgEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="resourcesService" ref="resourcesService" />
		<property name="activitiesService" ref="activitiesService" />
		<property name="peopleService" ref="peopleService" />
		<property name="appWorkbenchService" ref="peopleWorkbenchService" />
	</bean>

	<!-- Default Task and Activities editors -->
	<bean id="activityEditor"
		class="org.argeo.connect.people.workbench.rap.editors.ActivityEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="resourcesService" ref="resourcesService" />
		<property name="activitiesService" ref="activitiesService" />
		<property name="appWorkbenchService" ref="peopleWorkbenchService" />
	</bean>

	<bean id="taskEditor"
		class="org.argeo.connect.people.workbench.rap.editors.TaskEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="resourcesService" ref="resourcesService" />
		<property name="activitiesService" ref="activitiesService" />
		<property name="appWorkbenchService" ref="peopleWorkbenchService" />
	</bean>

	<!-- Search editors -->
	<bean id="defaultSearchEntityEditor"
		class="org.argeo.connect.people.workbench.rap.editors.DefaultSearchEntityEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleService" ref="peopleService" />
		<property name="peopleWorkbenchService" ref="peopleWorkbenchService" />
	</bean>

	<!-- Management of tags and static lists -->
	<bean id="tagEditor"
		class="org.argeo.connect.people.workbench.rap.editors.TagEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="resourcesService" ref="resourcesService" />
		<property name="appWorkbenchService" ref="peopleWorkbenchService" />
	</bean>

	<bean id="mailingListEditor"
		class="org.argeo.connect.people.workbench.rap.editors.MailingListEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="resourcesService" ref="resourcesService" />
		<property name="peopleService" ref="peopleService" />
		<property name="appWorkbenchService" ref="peopleWorkbenchService" />
	</bean>

	<bean id="listValuesEditor"
		class="org.argeo.connect.people.workbench.rap.editors.ListValuesEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="resourcesService" ref="resourcesService" />
		<property name="appWorkbenchService" ref="peopleWorkbenchService" />
	</bean>
</beans>
