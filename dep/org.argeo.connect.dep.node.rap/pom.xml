<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.argeo.connect</groupId>
		<version>2.1.3-SNAPSHOT</version>
		<artifactId>dep</artifactId>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>org.argeo.connect.dep.node.rap</artifactId>
	<name>Connect Node RAP Dependencies</name>
	<dependencies>
		<dependency>
			<groupId>org.argeo.connect</groupId>
			<artifactId>org.argeo.gis.ui.rap.openlayers</artifactId>
			<version>2.1.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.argeo.connect</groupId>
			<artifactId>org.argeo.connect.ui</artifactId>
			<version>2.1.3-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>org.argeo.connect</groupId>
			<artifactId>org.argeo.connect.ui.gps</artifactId>
			<version>2.1.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.argeo.connect</groupId>
			<artifactId>org.argeo.connect.streams.ui</artifactId>
			<version>2.1.3-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>org.argeo.commons.security</groupId>
			<artifactId>org.argeo.security.dep.node.rap</artifactId>
			<version>${version.argeo-commons}</version>
			<exclusions>
				<exclusion>
					<groupId>org.argeo.tp</groupId>
					<artifactId>org.eclipse.osgi</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.argeo.commons.server</groupId>
					<artifactId>org.argeo.server.dep.tomcat</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- Node -->
		<dependency>
			<groupId>org.argeo.connect</groupId>
			<artifactId>org.argeo.connect.dep.node</artifactId>
			<version>2.1.3-SNAPSHOT</version>
			<type>pom</type>
		</dependency>

		<!-- Test -->
		<dependency>
			<groupId>org.argeo.tp</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.argeo.commons.base</groupId>
			<artifactId>org.argeo.support.junit</artifactId>
			<version>${version.argeo-commons}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>rpmbuild</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>rpm-connect-eclipse</id>
								<phase>package</phase>
								<goals>
									<goal>rpm</goal>
								</goals>
								<configuration>
									<name>argeo-connect-eclipse</name>
									<mappings>
										<mapping>
											<directory>/usr/share/osgi/eclipse</directory>
											<username>root</username>
											<groupname>root</groupname>
											<filemode>644</filemode>
											<directoryIncluded>false</directoryIncluded>
											<dependency>
												<includes>
													<include>org.argeo.connect:org.argeo.gis.ui</include>
													<include>org.argeo.connect:org.argeo.connect.ui</include>
													<include>org.argeo.connect:org.argeo.connect.ui.gps</include>
												</includes>
											</dependency>
										</mapping>
									</mappings>
									<requires>
										<require>argeo-connect-libs</require>
										<require>argeo-node-eclipse</require>
									</requires>
								</configuration>
							</execution>
							<execution>
								<id>rpm-connect-rap</id>
								<phase>package</phase>
								<goals>
									<goal>rpm</goal>
								</goals>
								<configuration>
									<name>argeo-connect-rap</name>
									<mappings>
										<mapping>
											<directory>/usr/share/osgi/rap</directory>
											<username>root</username>
											<groupname>root</groupname>
											<filemode>644</filemode>
											<directoryIncluded>false</directoryIncluded>
											<dependency>
												<includes>
													<include>org.argeo.connect:org.argeo.gis.ui.js.openlayers</include>
													<include>org.argeo.connect:org.argeo.gis.ui.rap.openlayers</include>
												</includes>
											</dependency>
										</mapping>
									</mappings>
									<requires>
										<require>argeo-node-rap</require>
										<require>argeo-connect-rap-tp</require>
										<require>argeo-connect-eclipse</require>
									</requires>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>rpmbuild-tp</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>rpm-tp</id>
								<phase>package</phase>
								<goals>
									<goal>rpm</goal>
								</goals>
								<configuration>
									<name>argeo-connect-rap-tp</name>
									<projversion>${version.argeo-distribution}</projversion>
									<mappings>
										<mapping>
											<directory>/usr/share/osgi/rap</directory>
											<username>root</username>
											<groupname>root</groupname>
											<filemode>644</filemode>
											<directoryIncluded>false</directoryIncluded>
											<dependency>
												<includes>
													<include>org.argeo.tp.rap:org.polymap.openlayers.rap.widget</include>
													<include>org.argeo.tp:org.mortbay.jetty.util</include>
												</includes>
											</dependency>
										</mapping>
									</mappings>
									<requires>
										<require>eclipse-rap</require>
									</requires>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>