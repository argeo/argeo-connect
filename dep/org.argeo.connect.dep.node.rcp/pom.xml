	<profiles>
		<profile>
			<id>rpmbuild</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>rpm-connect-rcp</id>
								<phase>package</phase>
								<goals>
									<goal>rpm</goal>
								</goals>
								<configuration>
									<name>argeo-connect-rcp</name>
									<mappings>
										<mapping>
											<directory>/usr/share/osgi/rcp</directory>
											<username>root</username>
											<groupname>root</groupname>
											<filemode>644</filemode>
											<directoryIncluded>false</directoryIncluded>
											<dependency>
												<includes>
													<include>org.argeo.connect:org.argeo.gis.ui.rcp.swing</include>
												</includes>
											</dependency>
										</mapping>
									</mappings>
									<requires>
										<require>argeo-node-rcp</require>
										<require>argeo-connect-eclipse</require>
									</requires>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
