<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Centralizes the intelligence to open the correct editor depending on 
		the node type -->
	<bean id="openEntityEditor" class="org.argeo.connect.people.rap.commands.OpenEntityEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleService" ref="peopleService" />
	</bean>

	<!-- Entities and links CRUDs -->
	<bean id="deleteEntity" class="org.argeo.connect.people.rap.commands.DeleteEntity"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleService" ref="peopleService" />
	</bean>

	<bean id="editJob" class="org.argeo.connect.people.rap.commands.EditJob"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleService" ref="peopleService" />
		<property name="peopleWorkbenchService" ref="peopleWorkbenchService" />
	</bean>

	<bean id="removeEntityReference"
		class="org.argeo.connect.people.rap.commands.RemoveEntityReference"
		scope="prototype">
		<property name="repository" ref="repository" />
	</bean>

	<!-- User Management -->
	<bean id="createUserGroup" class="org.argeo.connect.people.rap.commands.CreateUserGroup"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleService" ref="peopleService" />
	</bean>
	<bean id="createPeopleUser" class="org.argeo.connect.people.rap.commands.CreatePeopleUser"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="jcrSecurityModel" ref="jcrSecurityModel" />
		<property name="peopleService" ref="peopleService" />
	</bean>

	<!-- Tasks and Activities -->
	<bean id="createSimpleTask" class="org.argeo.connect.people.rap.commands.CreateSimpleTask"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleService" ref="peopleService" />
		<property name="peopleWorkbenchService" ref="peopleWorkbenchService" />
	</bean>
</beans>