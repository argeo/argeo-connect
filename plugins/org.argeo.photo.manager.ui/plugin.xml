<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

	<extension id="application"
		point="org.eclipse.core.runtime.applications">
		<application>
			<run class="org.argeo.photo.manager.ui.Application"></run>
		</application>
	</extension>
	<extension point="org.eclipse.ui.perspectives">
		<perspective name="Perspective"
			class="org.argeo.photo.manager.ui.PhotoManagerPerspective"
			id="org.argeo.photo.manager.ui.perspective">
		</perspective>
	</extension>
	<extension point="org.eclipse.ui.views">
		<view name="View" class="org.argeo.photo.manager.ui.RenameView"
			id="org.argeo.photo.manager.ui.renameView">
		</view>
		<view name="Photo Navigator"
			class="org.eclipse.ui.navigator.CommonNavigator"
			id="org.argeo.photo.manager.ui.navigatorView">
		</view>
	</extension>
