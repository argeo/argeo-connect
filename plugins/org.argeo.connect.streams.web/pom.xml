<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.argeo.connect</groupId>
		<version>2.1.7-SNAPSHOT</version>
		<artifactId>plugins</artifactId>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>org.argeo.connect.streams.web</artifactId>
	<name>Connect Streams Web</name>
	<packaging>jar</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<!-- Different from plugin -->
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Activator>org.argeo.connect.streams.web.StreamsWebActivator</Bundle-Activator>
						<Require-Bundle>
							org.eclipse.rap.rwt;bundle-version="[2.2.0,3.0.0)",
							org.eclipse.rap.jface;bundle-version="[2.2.0,3.0.0)"
						</Require-Bundle>
						<Import-Package>
							*,
							com.sun.syndication,
							com.sun.syndication.feed.synd.impl,
							com.sun.syndication.io.impl,
							javax.jcr.nodetype,
							org.springframework.core,
							org.argeo.connect.people,
							org.argeo.security.ui.rap;resolution:=optional,
							org.xml.sax;version="0.0.0";resolution:=optional,
							org.xml.sax.helpers;version="0.0.0";resolution:=optional,
						</Import-Package>
						<!-- org.argeo.eclipse.spring, javax.jcr.nodetype, org.jdom, org.argeo.connect.people, 
							com.sun.syndication, com.sun.syndication.feed.synd.impl, com.sun.syndication.io.impl, 
							org.argeo.connect.people.core, org.argeo.connect.people.ui.utils, org.argeo.connect.people.ui.listeners, 
							org.argeo.connect.people.ui.editors, org.argeo.security.ui.rap;resolution:=optional, 
							org.xml.sax;version="0.0.0";resolution:=optional, org.xml.sax.helpers;version="0.0.0";resolution:=optional, 
							org.argeo.security.ui.rap;resolution:=optional, -->
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<!-- Argeo Web -->
		<dependency>
			<groupId>org.argeo.connect</groupId>
			<artifactId>org.argeo.connect.files.web</artifactId>
			<version>2.1.7-SNAPSHOT</version>
		</dependency>

		<!-- FIXME only used because the CND must be in an other bundle. -->
		<dependency>
			<groupId>org.argeo.connect</groupId>
			<artifactId>org.argeo.connect.people.specs</artifactId>
			<version>2.1.7-SNAPSHOT</version>
		</dependency>

		<!-- Feeds -->
		<dependency>
			<groupId>org.argeo.tp</groupId>
			<artifactId>com.sun.syndication</artifactId>
		</dependency>

		<dependency>
			<groupId>org.argeo.tp</groupId>
			<artifactId>org.apache.commons.lang</artifactId>
		</dependency>

		<!-- Commons -->
		<dependency>
			<groupId>org.argeo.commons.base</groupId>
			<artifactId>org.argeo.util</artifactId>
			<version>${version.argeo-commons}</version>
		</dependency>
		<!-- <dependency> <groupId>org.argeo.commons.base</groupId> <artifactId>org.argeo.eclipse.ui</artifactId> 
			<version>${version.argeo-commons}</version> </dependency> -->
		<dependency>
			<groupId>org.argeo.commons.base</groupId>
			<artifactId>org.argeo.eclipse.ui.jcr</artifactId>
			<version>${version.argeo-commons}</version>
		</dependency>

		<!-- TODO Why is it needed ? -->
		<dependency>
			<groupId>org.argeo.commons.security</groupId>
			<artifactId>org.argeo.security.ui.rap</artifactId>
			<version>${version.argeo-commons}</version>
			<scope>provided</scope>
		</dependency>

		<!-- QA -->
		<!-- RAP only dependency, needed at compile time -->
		<dependency>
			<groupId>org.argeo.commons.base</groupId>
			<artifactId>org.argeo.eclipse.dep.rap</artifactId>
			<version>${version.argeo-commons}</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
</project>
