<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.argeo.connect</groupId>
		<artifactId>plugins</artifactId>
		<version>2.1.6-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>org.argeo.connect.people.rap</artifactId>
	<name>Connect People - Eclipse RAP</name>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
					<include>META-INF/**</include>
					<include>branding/**</include>
					<include>theme/**</include>
					<include>*.properties</include>
					<include>properties/*.properties</include>
					<include>p2.inf</include>
				</includes>
				<excludes>
					<exclude>build.properties</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-Activator>org.argeo.connect.people.rap.PeopleRapPlugin</Bundle-Activator>
						<Require-Bundle>
							org.eclipse.rap.ui,
							org.eclipse.rap.ui.workbench
						</Require-Bundle>
						<Import-Package>
							org.argeo.eclipse.spring,
							org.argeo.eclipse.ui.specific,
							*
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>

	</build>
	<dependencies>
		<!--  RAP specific dependencies -->
		<dependency>
			<groupId>org.argeo.commons.base</groupId>
			<artifactId>org.argeo.eclipse.ui.rap</artifactId>
			<version>${version.argeo-commons}</version>
		</dependency>
		
		<!--  Base RAP distibution -->
		<dependency>
			<groupId>org.argeo.commons.security</groupId>
			<artifactId>org.argeo.security.dep.node.rap</artifactId>
			<version>${version.argeo-commons}</version>
		</dependency>
	</dependencies>
</project>