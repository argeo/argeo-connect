<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.6"?>
<plugin>
	<!-- Entry point for the RAP application --> 
	<extension
		point="org.eclipse.rap.ui.entrypoint">
		<!-- Entry point for rap 2.0 and eclipse 4.2 with rap tooling --> 
		<entrypoint
			id="org.argeo.connect.people.rap.entrypoint"
			class="org.argeo.connect.people.rap.PeopleSecureEntryPoint"
			path="/people"
			brandingId="org.argeo.connect.people.rap.defaultBranding">
		</entrypoint>
	</extension>
 	<extension
		point="org.eclipse.ui.commands">
		<command
			defaultHandler="org.argeo.eclipse.spring.SpringExtensionFactory"
			id="org.argeo.connect.people.ui.specific.openFile"
			name="People OpenFile">
			<commandParameter
         		id="param.fileName"
         		name="The name of the file to open (optional)">
  	 		</commandParameter>
            <commandParameter
         		id="param.fileURI"
         		name="The URI of this file on the server">
  	 		</commandParameter>
  	 		<commandParameter
         		id="param.filePath"
         		name="The absolute path of this file on the server file system">
  	 		</commandParameter>
		</command>
 	</extension>
 
 	<!-- BRANDING --> 
	<!-- The 2 following warnings are useless --> 
	<extension
		point="org.eclipse.rap.ui.branding">
		<branding
			id="org.argeo.connect.people.rap.defaultBranding"
			themeId="org.eclipse.rap.rwt.theme.Default"
			title="People"
			favicon="branding/favicon.gif">
		</branding>
	</extension>


	<!-- SERVICE HANDLERS --> 
	<extension point="org.eclipse.rap.ui.serviceHandler">
            <!-- class="org.argeo.eclipse.ui.specific.OpenFsFileService" --> 
		<serviceHandler
            class="org.argeo.eclipse.spring.SpringExtensionFactory"
            id="org.argeo.connect.people.rap.peopleOpenFileService">
      </serviceHandler>
   </extension>

	<!-- LOCAL THEMES --> 
	<extension
		point="org.eclipse.rap.ui.themes">
		<themeContribution
			themeId="org.eclipse.rap.rwt.theme.Default"
			file="theme/peopleExt.css" />
	</extension> 
</plugin>
