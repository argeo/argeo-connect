<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Centralizes the intelligence to open the correct editor depending on 
		the node type -->
	<bean id="openEntityEditor" class="org.argeo.connect.people.ui.commands.OpenEntityEditor"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
		<property name="repository" ref="repository" />
	</bean>

	<!-- Entity References CRUD -->
	<bean id="addEntityReference" class="org.argeo.connect.people.ui.commands.AddEntityReference"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
	</bean>

	<bean id="editEntityReference"
		class="org.argeo.connect.people.ui.commands.EditEntityReference"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
	</bean>

	<bean id="editEntityReferenceWithPosition"
		class="org.argeo.connect.people.ui.commands.EditEntityReferenceWithPosition"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
	</bean>

	<bean id="removeEntityReference"
		class="org.argeo.connect.people.ui.commands.RemoveEntityReference"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
	</bean>

	<bean id="deleteEntity" class="org.argeo.connect.people.ui.commands.DeleteEntity"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
	</bean>

	<!-- USER MANAGEMENT -->
	<bean id="createUserGroup" class="org.argeo.connect.people.ui.commands.CreateUserGroup"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleService" ref="peopleService" />
	</bean>
	<bean id="createPeopleUser" class="org.argeo.connect.people.ui.commands.CreatePeopleUser"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="userAdminService" ref="userAdminService" />
		<property name="jcrSecurityModel" ref="jcrSecurityModel" />
		<property name="peopleService" ref="peopleService" />
	</bean>

	<!--  TASKS AND ACTIVITIES -->
	<bean id="createSimpleTask" class="org.argeo.connect.people.ui.commands.CreateSimpleTask"
		scope="prototype">
		<property name="repository" ref="repository" />
		<property name="peopleService" ref="peopleService" />
	</bean>



	<bean id="importPeople"
		class="org.argeo.connect.people.ui.commands.ImportPeopleHandler"
		scope="prototype">
		<property name="repository" ref="repository" />
	</bean>
</beans>