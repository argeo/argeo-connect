<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="staticSearchEntityEditor"
		class="org.argeo.connect.people.ui.editors.StaticSearchEntityEditor"
		scope="prototype">
		<property name="repository" ref="repository" />
	</bean>
	<!-- REMOVE THE FOLLOWING -->
	<bean id="searchEntityEditor" class="org.argeo.connect.people.ui.editors.SearchEntityEditor"
		scope="prototype">
		<property name="peopleService" ref="peopleService" />
	</bean>

	<bean id="groupEditor" class="org.argeo.connect.people.ui.editors.GroupEditor"
