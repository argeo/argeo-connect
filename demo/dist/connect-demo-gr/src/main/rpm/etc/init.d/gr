#!/bin/bash
#
# gr	Argeo Connect GR
#
# chkconfig: 3 92 92
# description: Argeo Connect Demo GR (http://www.argeo.org)

# Source function library.
. /etc/osgiboot/osgi-service-init-functions.sh

# Application id (must be in line with header)
APP=gr

# main
case "$1" in
  start)
        osgi_service_start $APP
        ;;
  stop)
        osgi_service_stop $APP
        ;;
  restart)
        osgi_service_stop $APP
        osgi_service_start $APP
        RETVAL=$?
        ;;
  status)
        osgi_service_status $APP
        ;;
  *)
        echo $"Usage: $0 {start|stop|restart|status}"
        exit 1
esac

exit $RETVAL
