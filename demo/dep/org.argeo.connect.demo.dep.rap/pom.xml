<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.argeo.connect.demo</groupId>
		<artifactId>dep</artifactId>
		<version>1.1.3-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>org.argeo.connect.demo.dep.rap</artifactId>
	<name>Connect Demo RAP Dependencies</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<SLC-ModularDistribution>default</SLC-ModularDistribution>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.argeo.maven.plugins</groupId>
				<artifactId>maven-argeo-osgi-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	<dependencies>

		<!-- UI - RAP specific -->
		<dependency>
			<groupId>org.argeo.connect.demo</groupId>
			<artifactId>org.argeo.connect.demo.rap</artifactId>
			<version>1.1.3-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>org.argeo.connect.demo</groupId>
			<artifactId>org.argeo.connect.demo.gr.ui</artifactId>
			<version>1.1.3-SNAPSHOT</version>
		</dependency>

		<!-- GR Core -->
		<dependency>
			<groupId>org.argeo.connect.demo</groupId>
			<artifactId>org.argeo.connect.demo.dep.backend</artifactId>
			<version>1.1.3-SNAPSHOT</version>
		</dependency>

		<!-- Argeo Connect distribution for RAP projects with security -->
		<dependency>
			<groupId>org.argeo.connect</groupId>
			<artifactId>org.argeo.connect.dep.node.rap</artifactId>
			<version>1.1.3-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>rpmbuild</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>rpm-connect-eclipse</id>
								<phase>package</phase>
								<goals>
									<goal>rpm</goal>
								</goals>
								<configuration>
									<name>argeo-connect-demo-eclipse</name>
									<mappings>
										<mapping>
											<directory>/usr/share/osgi/eclipse</directory>
											<username>root</username>
											<groupname>root</groupname>
											<filemode>644</filemode>
											<directoryIncluded>false</directoryIncluded>
											<dependency>
												<includes>
													<include>org.argeo.connect.demo:org.argeo.connect.demo.gr.ui</include>
												</includes>
											</dependency>
										</mapping>
									</mappings>
									<requires>
										<require>argeo-connect-demo-libs</require>
									</requires>
								</configuration>
							</execution>
							<execution>
								<id>rpm-connect-rap</id>
								<phase>package</phase>
								<goals>
									<goal>rpm</goal>
								</goals>
								<configuration>
									<name>argeo-connect-demo-rap</name>
									<mappings>
										<mapping>
											<directory>/usr/share/osgi/rap</directory>
											<username>root</username>
											<groupname>root</groupname>
											<filemode>644</filemode>
											<directoryIncluded>false</directoryIncluded>
											<dependency>
												<includes>
													<include>org.argeo.connect.demo:org.argeo.connect.demo.rap</include>
												</includes>
											</dependency>
										</mapping>
									</mappings>
									<requires>
										<require>argeo-connect-demo-eclipse</require>
										<require>argeo-connect-rap</require>
									</requires>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>